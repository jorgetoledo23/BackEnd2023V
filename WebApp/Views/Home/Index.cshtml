@model IndexViewModel

@{
    ViewData["Title"] = "Home Page";
}


<div class="text-center">
    <h1 class="display-4">Welcome </h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
<h1>Usuarios</h1>
<table>
    <tr>
        <th>Nombre</th>
        <th>Email</th>
    </tr>

    @foreach (var user in Model.ListaUsuarios)
    {
        <tr>
            <td>@user.Name</td>
            <td>@user.Correo</td>
        </tr>
    }

</table>
<h1 class="mt-3">Departamentos</h1>

<div class="row justify-content-center">
    @foreach (var dpto in Model.ListaDepartamento)
    {
        <div class="card text-center m-2 p-2" style="width: 18rem;">
            <p class="fs-1"><i class="bi bi-arrow-down-right-circle "></i></p>
            <div class="card-body">
                <h5 class="card-title">@dpto.Nombre</h5>
                <a href="#" class="btn btn-primary"><i class="bi bi-recycle"></i></a>
                <a href="#" class="btn btn-primary"><i class="bi bi-recycle"></i></a>
                <a href="#" class="btn btn-primary"><i class="bi bi-recycle"></i></a>
            </div>
        </div>
    }
</div>

    

